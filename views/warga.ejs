<!DOCTYPE html>
<html>
  <head>
    <%- include('_head.ejs'); %>
  </head>
  <body>
    <%- include('_header.ejs'); %>
    <div class="container my-4">
      <div class="row">
        <div class="col">
          <h3>Semua Warga(<%= model.length %>)</h3>
          <p class="border-4 border-top w-25"></p>
          <div class="table-responsive-sm">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Nama</th>
                  <th>NIK</th>
                  <th>Tanggal Lahir</th>
                  <th>Kelamin</th>
                  <th>Agama</th>
                  <th class="d-print-none">
                    <a class="btn btn-sm btn-success" href="/addWarga">Add</a>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% for (const warga of model) { %>
                <tr>
                  <td><%= warga.nama %></td>
                  <td><%= warga.nik %></td>
                  <td><%= warga.tanggallahir %></td>
                  <td><%= warga.kelamin %></td>
                  <td><%= warga.agama %></td>
                  <td class="d-print-none">
                    <a
                      class="btn btn-sm btn-warning"
                      href="/editWarga/<%= warga.id %>"
                      >Edit</a
                    >
                    <a
                      class="btn btn-sm btn-danger"
                      href="/deleteWarga/<%= warga.id %>"
                      >Delete</a
                    >
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <h3 class="mt-4">Warga terakhir ditambahkan</h3>
          <p class="border-4 border-top w-25"></p>
          <ol>
            <% for (const warga of model) { %>
            <li>
              <%= warga.nama %>
              <em>(<%= warga.kelamin %>)</em>
            </li>
            <% } %>
          </ol>
        </div>
      </div>
    </div>
    <footer><%- include('_footer'); %></footer>
  </body>
</html>
