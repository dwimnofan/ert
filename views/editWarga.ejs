<!DOCTYPE html>
<html>
  <head>
    <%- include('_head.ejs'); %>
  </head>
  <body>
    <%- include('_header.ejs'); %>

    <div class="container my-4">
        <h3>Edit Data Warga</h3>
        <p class="border-4 border-top w-25"></p>
        <form action="/editWarga/<%= model.id %>" method="post">
        <div class="row">
          <div class="col-10 col-md-6">
            <label for="nama" class="form-label">Nama</label>
            <div class="input-group mb-4">
              <input
                type="text"
                autofocus
                class="form-control"
                name="nama"
                value="<%= model.nama %>"
                aria-label="Nama"
                aria-describedby="basic-addon1"
              />
            </div>
            <label for="nik" class="form-label">NIK</label>
            <div class="input-group mb-4">
              <input
                type="text"
                name="nik"
                value="<%= model.nik %>"
                class="form-control"
                aria-label="nik"
                aria-describedby="basic-addon1"
                onkeypress="return onlyNumberKey(event)"
                maxlength="16"
              />
            </div>
            <label for="tanggallahir" class="form-label">Tanggal Lahir</label>
            <div class="input-group mb-4">
              <input
              type="text"
              name="tanggallahir"
              value="<%= model.tanggallahir %>"
              class="form-control"
              aria-label="tanggallahir"
              aria-describedby="basic-addon1"
              onkeypress="return onlyNumberKey(event)"
              maxlength="8"
              />
            </div>
            <label for="kelamin" class="form-label">Jenis Kelamin</label>
            <div class="input-group mb-4">
              <input
                type="text"
                autofocus
                class="form-control"
                name="kelamin"
                value="<%= model.kelamin %>"
                aria-label="kelamin"
                aria-describedby="basic-addon1"
              />
            </div>
            <label for="agama" class="form-label">Agama</label>
            <div class="input-group mb-4">
              <input
                type="text"
                autofocus
                class="form-control"
                name="agama"
                value="<%= model.agama %>"
                aria-label="agama"
                aria-describedby="basic-addon1"
              />
            </div>
            <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input
                type="submit"
                name=""
                value="Update"
                class="btn btn-default btn-warning"
                />
                <a class="btn btn-outline-dark cancel" href="/warga">Cancel</a>
            </div>
            </div>
          </div>
      </div>
    </form>
    <footer><%- include('_footer'); %></footer>
    <script>
            function onlyNumberKey(event) {
        var ASCIICode = (event.which) ? event.which : event.keyCode
        if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
            return false;
        return true;
    }
    </script>
  </body>
</html>
