<!DOCTYPE html>
<html>
  <head>
    <%- include('_head.ejs'); %>
  </head>
  <body>
    <%- include('_header.ejs'); %>

    <div class="container my-4">
        <h3>Tambah Data</h3>
        <p class="border-4 border-top w-25"></p>
        <form action="/addRt" method="post">
        <div class="row">
          <div class="col-10 col-md-6">
            <label for="nama" class="form-label">Nama</label>
            <div class="input-group mb-4">
              <input
                type="text"
                autofocus
                class="form-control"
                name="nama"
                value="<%= model.nama %>"
                aria-label="Nama"
                aria-describedby="basic-addon1"
              />
            </div>
  
            <label for="jabatan" class="form-label">jabatan</label>
            <div class="input-group mb-4">
              <input
                type="text"
                autofocus
                class="form-control"
                name="jabatan"
                value="<%= model.jabatan %>"
                aria-label="jabatan"
                aria-describedby="basic-addon1"
              />
            </div>
            <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Save" class="btn btn-default btn-success">
                <a class="btn btn-outline-dark cancel" href="/rt">Cancel</a>
            </div>
            </div>
          </div>
      </div>
    </form>
    <footer><%- include('_footer'); %></footer>
  </body>
</html>
